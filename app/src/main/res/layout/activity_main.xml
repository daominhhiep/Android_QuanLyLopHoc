<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/constraintLayout">
    <Button
            android:text="Thêm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonAdd"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="21dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextAddress" android:layout_marginTop="16dp"/>
    <Button
            android:text="Sửa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonEdit"
            android:layout_marginEnd="21dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextGpa" android:layout_marginTop="16dp"/>

    <ListView
            android:layout_width="312dp"
            android:layout_height="0dp"
            android:id="@+id/listViewStudent" app:layout_constraintTop_toBottomOf="@+id/buttonAdd"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp" android:layout_marginEnd="5dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="21dp">
    </ListView>
    <EditText
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="ID"
            android:id="@+id/editTextId"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="19dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Họ tên"
            android:ems="9"
            android:id="@+id/editTextName"
            app:layout_constraintStart_toEndOf="@+id/editTextId" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Năm sinh"
            android:ems="10"
            android:id="@+id/editTextBirth"
            app:layout_constraintStart_toEndOf="@+id/editTextName"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:layout_marginEnd="19dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Địa chỉ"
            android:ems="10"
            android:id="@+id/editTextAddress"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextId" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="21dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="GPA"
            android:ems="10"
            android:id="@+id/editTextGpa"
            app:layout_constraintTop_toBottomOf="@+id/editTextName"
            android:layout_marginEnd="19dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@+id/editTextAddress"/>
    <Button
            android:text="Sắp xếp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonSort"
            app:layout_constraintStart_toEndOf="@+id/buttonAdd" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonEdit" android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextAddress" android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>