<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        xmlns:tools="http://schemas.android.com/tools">

    <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imageViewAvt"/>
    <TextView
            android:text="ID : "
            android:fontFamily="@font/bellota_bold"
            android:textSize="15sp"
            android:layout_toRightOf="@id/imageViewAvt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
    />
    <TextView
            android:text="Lớp : "
            android:fontFamily="@font/bellota_bold"
            android:textSize="15sp"
            android:layout_toRightOf="@id/textViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
    />
    <TextView
            android:text="Họ tên : "
            android:textSize="15sp"
            android:fontFamily="@font/bellota_bold"
            android:layout_below="@id/textView1"
            android:layout_toRightOf="@id/imageViewAvt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"/>
    <TextView
            android:text="Năm sinh : "
            android:textSize="15sp"
            android:fontFamily="@font/bellota_bold"
            android:layout_below="@id/textView2"
            android:layout_toRightOf="@id/imageViewAvt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
    />
    <TextView
            android:text="Địa chỉ: "
            android:textSize="15sp"
            android:fontFamily="@font/bellota_bold"
            android:layout_below="@id/textView3"
            android:layout_toRightOf="@id/imageViewAvt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
    />
    <TextView
            android:text="Điểm trung bình : "
            android:textSize="15sp"
            android:fontFamily="@font/bellota_bold"
            android:layout_below="@id/textView4"
            android:layout_toRightOf="@id/imageViewAvt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
    />


    <TextView
            android:id="@+id/textViewId"
            android:textColor="#000000"
            android:fontFamily="@font/bellota"
            android:layout_toRightOf="@id/textView1"
            android:textSize="15sp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/textViewName"
            android:textColor="#000000"
            android:fontFamily="@font/bellota"
            android:layout_toRightOf="@id/textView2"
            android:layout_below="@id/textViewId"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/textViewClass"
              android:textColor="#000000"
              android:fontFamily="@font/bellota"
              android:textSize="15sp"
              android:layout_toRightOf="@id/textView"/>

    <TextView
            android:id="@+id/textViewAge"
            android:textColor="#000000"
            android:fontFamily="@font/bellota"
            android:layout_toRightOf="@id/textView3"
            android:layout_below="@id/textViewName"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
            android:id="@+id/textViewAddress"
            android:textColor="#000000"
            android:fontFamily="@font/bellota"
            android:layout_toRightOf="@id/textView4"
            android:layout_below="@id/textViewAge"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <TextView
            android:id="@+id/textViewGpa"
            android:textColor="#000000"
            android:fontFamily="@font/bellota"
            android:layout_toRightOf="@id/textView5"
            android:layout_below="@id/textViewAddress"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</RelativeLayout>